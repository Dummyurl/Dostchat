<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerDrawerImage"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:clickable="true"
    android:enabled="false"
    android:orientation="vertical">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/userCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhiteLight"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/userAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="?attr/actionBarSize"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:textStyle="bold" />

        <io.github.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:singleLine="false"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.dostchat.dost.ui.FontsView
        android:id="@+id/edit_profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="26dp"
        android:background="@drawable/bg_item_round_ripple"
        android:clickable="true"
        android:padding="16dp"
        android:text="@string/icon_menu_edit"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold" />
</FrameLayout>